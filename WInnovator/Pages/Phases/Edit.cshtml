@page
@model WInnovator.EditModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bewerken</title>
</head>
<body>

<h4>Fase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Phase.Id" />
            <div class="form-group">
                <label asp-for="Phase.Name" class="control-label"></label>
                <input asp-for="Phase.Name" class="form-control" />
                <span asp-validation-for="Phase.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Terug naar de overzichtspagina</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
