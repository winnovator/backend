@page
@model WInnovator.Pages.WorkingForms.CreateModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    @if (ViewData["GuidParseError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>@ViewData["GuidParseError"]</strong>
        </div>
    }
    else
    {


        @if (TempData["belongsToDesignShop"] != null)
        {
            <h4>WorkingForm voor DesignShop @ViewData["DesignShopDescription"]</h4>
            <hr />
        }
        else
        {
            <h4>WorkingForm</h4>
            <hr />
        }
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="WorkingForm.Name" class="control-label"></label>
                        <input asp-for="WorkingForm.Name" class="form-control col-md-4" />
                        <span asp-validation-for="WorkingForm.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingForm.DisplayName" class="control-label"></label>
                        <input asp-for="WorkingForm.DisplayName" class="form-control col-md-4" />
                        <span asp-validation-for="WorkingForm.DisplayName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingForm.DefaultTimeNeeded" class="control-label"></label>
                        <input asp-for="WorkingForm.DefaultTimeNeeded" class="form-control col-md-2" />
                        <span asp-validation-for="WorkingForm.DefaultTimeNeeded" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingForm.PhaseId" class="control-label"></label>
                        <select asp-for="WorkingForm.PhaseId" class="form-control col-md-4" asp-items="ViewBag.PhaseId"></select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="WorkingForm.UploadEnabled" /> @Html.DisplayNameFor(model => model.WorkingForm.UploadEnabled)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingForm.Resume" class="control-label"></label>
                        <textarea asp-for="WorkingForm.Resume" class="form-control"></textarea>
                        <span asp-validation-for="WorkingForm.Resume" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingForm.Description" class="control-label"></label>
                        <textarea asp-for="WorkingForm.Description" class="form-control"></textarea>
                        <span asp-validation-for="WorkingForm.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    }
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="~/js/tm.js"></script>
    }
</body>
</html>
