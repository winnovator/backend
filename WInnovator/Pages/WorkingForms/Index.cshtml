@page
@model WInnovator.Pages.WorkingForms.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkingForm[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingForm[0].PhaseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingForm[0].UploadEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingForm[0].DefaultTimeNeeded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WorkingForm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadEnabled)
            </td>
            <td>
                @TimeSpan.FromMinutes(item.DefaultTimeNeeded).ToString(@"hh\:mm")
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
