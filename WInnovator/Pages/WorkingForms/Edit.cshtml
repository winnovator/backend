@page
@model WInnovator.Pages.WorkingForms.EditModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>WorkingForm</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WorkingForm.Id" />
                <div class="form-group">
                    <label asp-for="WorkingForm.Name" class="control-label"></label>
                    <input asp-for="WorkingForm.Name" class="form-control" />
                    <span asp-validation-for="WorkingForm.Name" class="text-danger"></span>
                    <label asp-for="WorkingForm.DefaultTimeNeeded" class="control-label"></label>
                    <input asp-for="WorkingForm.DefaultTimeNeeded" class="form-control" />
                    <span asp-validation-for="WorkingForm.DefaultTimeNeeded" class="text-danger"></span>
                    <label asp-for="WorkingForm.Content" class="control-label"></label>
                    <textarea asp-for="WorkingForm.Content" rows="15" class="form-control"></textarea>
                    <span asp-validation-for="WorkingForm.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="~/js/tm.js"></script>
    }
</body>
</html>
